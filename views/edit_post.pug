extends layout

block content
    h1 #{title}
    form(method="POST", action="/posts/edit/"+post._id)
        #form-group
            label Text:
            input.form-control(name='text', type="text", value=post.text)
        #form-group
            label createAt:
            input.form-control(name='createdAt', type="text", value=post.createdAt)
        br
        input.btn.btn-primary(type='submit', value="submit")